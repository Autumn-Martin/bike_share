<h1>All Accessories</h1>

<br />

<table class='item-table'>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th>Status</th>
  </tr>
  <% @accessories.each do |item| %>
  <tr>
    <% @accessory = item %>
    <td><img src="<%= item.image %>" alt="thumbnail"></td>
    <td><%= item.title %></td>
    <td><%= item.price %></td>
    <td><%= item.description %></td>
    <% if item.retired == true %>
      <td>Retired</td>
    <% else %>
      <td>Active</td>
    <% end %>
      <td>
        <%= link_to "Edit", edit_admin_accessory_path(item), method: "get", class: "edit"%>
      </td>
      <td>
        <% if item.retired %>
          <%= link_to "Reactivate", update_accessory_admin_accessory_path(item.slug), method: :patch, class: "retire"%>
        <% else %>
          <%= link_to "Retire", update_accessory_admin_accessory_path(item.slug), method: :patch, class: "retire"%>
        <% end %>
      </td>
  </tr>
  <% end %>