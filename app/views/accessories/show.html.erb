<h1><%= @accessory.title %></h1>

<ul>
  <div class='image-holder'>
    <img class='accessory-image' src="<%= @accessory.image %>" alt="holder.jpg">
  </div>
  <li>Price: $<%= @accessory.price %></li>
  <li>Description: <%= @accessory.description %></li>
  <li><% if @accessory.retired == true %>
        <%= "Accessory Retired" %>
      <% else %>
        <%= link_to "Add To Cart", accessory_path(@accessory) %>
      <% end %>
  </li>
</ul>
