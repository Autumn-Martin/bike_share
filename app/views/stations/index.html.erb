<h1>All Stations</h1>
<br>
<% if current_user %>
  <%= link_to "Stations Dashboard", stations_dashboard_path, class: "nav-link" %>
<% end %>
<br>
<div class='card-holder'>
  <% @stations.each do |station| %>
    <ul class="station-card">
      <% if current_user && current_user.admin? %>
        <li>Station: <%= link_to station.name , admin_station_path(station) %></li>
      <% else %>
        <li>Station: <%= link_to station.name , station_path(station) %></li>
      <% end %>
      <li>Dock Count: <%= station.dock_count %></li>
      <li>City: <%= station.city %></li>
      <li>Install Date: <%= station.installation_date.strftime("%m/%d/%Y")%></li>
    </ul>
    <br>
  <% end %>
</div>
