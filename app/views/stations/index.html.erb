<% if current_user && current_user.admin? %>
  <h1>Admin Stations</h1>
<% else %>
  <h1>All Stations</h1>
<% end %>
</br>

<div class ="btn">
  <%= link_to "Create Station", new_station_path %>
</div>
</br>

<div class='card-holder'>
  <% @stations.each do |station| %>
    <ul class="station-card">
      <li>Station: <%= link_to station.name , station_path(station) %></li>
      <li>Dock Count: <%= station.dock_count %></li>
      <li>City: <%= station.city %></li>
      <li>Install Date: <%= station.installation_date %></li>
      <% if current_user && current_user.admin? %>
        <li><%= link_to "Edit", edit_station_path(@station) %></li>
        <li><%= link_to "Delete", station_path(@station), method: :delete %></li>
      <% end %>
    </ul>
  <% end %>
</div>
