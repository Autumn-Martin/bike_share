<% if current_admin? %>
  <h1>Admin Conditions</h1>
<% else %>
  <h1>Conditions</h1>
<% end %>
</br>

<% if current_admin? %>
<div class="btn">
  <%= link_to "Create Condition", new_admin_condition_path %>
</div>
<% end %>
<br>

<% if current_user %>
  <%= link_to "Condition Dashboard", condition_dashboard_path %>
<% end %>
<br>

<% @conditions.each do |condition| %>
  <ul>
    <li><%= link_to "Date: #{condition.date.strftime("%m/%d/%Y")}", condition_path(condition.id) %></li>
    <li>Max Temperature: <%= condition.max_temp %> °F</li>
    <li>Mean Temperature: <%= condition.mean_temp %> °F</li>
    <li>Min Temperature: <%= condition.min_temp %> °F</li>
    <li>Mean Humidity: <%= condition.mean_humidity %>%</li>
    <li>Mean Visibility: <%= condition.mean_visibility %> miles</li>
    <li>Mean Wind Speed: <%= condition.mean_wind_speed %> mph</li>
    <li>Precipitation: <%= condition.precip %> inches</li>
    <% if current_admin? %>
      <li><%= link_to "Edit", edit_admin_condition_path(condition) %></li>
      <li><%= link_to "Delete", admin_condition_path(condition), method: :delete %></li>
    <% end %>
  </ul>
<% end %>
<br>
