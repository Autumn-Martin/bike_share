<h1>Admin Trips</h1>

<% @trips.each do |trip| %>
  <ul>
    <li><%= link_to trip.id, admin_trip_path(trip) %></li>
    <li>Duration: <%= trip.duration%> minutes </li>
    <li>Start Date: <%= trip.start_date %></li>
    <li>Start Station: <%= trip.start_station.name %></li>
    <li>End Date: <%= trip.end_date %></li>
    <li>End Station: <%= trip.end_station.name %></li>
    <li>Bike Id: <%= trip.bike_id %></li>
    <li>Subscription Type: <%= trip.subscription_type %></li>
    <li>Zip code: <%= trip.zip_code %></li>
    <li><%= link_to "Edit" %></li>
    <li><%= link_to "Delete" %></li>
  </ul>
  <br>
    <% end %>
    <%= will_paginate @trips %>
